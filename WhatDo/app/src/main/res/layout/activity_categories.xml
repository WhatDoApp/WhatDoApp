<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.whatdo.whatdoco.whatdo.CategoriesActivity"
    android:background="@drawable/bg_gradient">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_gradient"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:padding="7dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton"
                android:src="@drawable/what_do_advice"
                android:scaleType="fitXY"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/what_do_relationships"
                android:scaleType="fitXY"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/what_do_academia"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton4"
                android:src="@drawable/what_do_gaming_entertainment"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="7dp">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton5"
                android:src="@drawable/what_do_arts"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton6"
                android:src="@drawable/what_do_movies"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="7dp">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton7"
                android:src="@drawable/what_do_technology"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton8"
                android:src="@drawable/what_do_sports"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="7dp">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton9"
                android:src="@drawable/what_do_health_fitness"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButton10"
                android:src="@drawable/what_do_fashion"
                android:scaleType="fitXY" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="Done!"
                android:id="@+id/button3"
                android:background="#ff3fceed"
                android:textSize="20dp"
                android:layout_gravity="center_vertical|center_horizontal"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
